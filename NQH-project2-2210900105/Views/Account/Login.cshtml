@model NQH_project2_2210900105.Models.LoginModel

@{ ViewBag.Title = "Đăng Nhập";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Đăng nhập hệ thống</h2>

<!-- Member Login Form -->
@using (Html.BeginForm("Login", "Account")) // Specify the action and controller
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Tài Khoản Thành Viên</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.member_username, "Tên Đăng Nhập", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.member_username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.member_username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.member_pass, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.member_pass, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.member_pass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng Nhập" class="btn btn-primary my-2 btn-block" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <p>Nếu chưa có tài khoản? <a href="@Url.Action("Create", "MEMBERs")">Đăng ký tại đây</a></p>
                        </div>
                    </div>
                </div>}

<hr />

<!-- Admin Login Form -->
@using (Html.BeginForm("AdminLogin", "Account")) // Specify the action and controller for admin
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Tài Khoản Quản Trị</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("Tên Đăng Nhập Quản Trị", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="admin_username" class="form-control" />
                            @Html.ValidationMessage("admin_username", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Mật khẩu Quản Trị", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="password" name="admin_pass" class="form-control" />
                            @Html.ValidationMessage("admin_pass", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng Nhập Quản Trị" class="btn btn-primary my-2 btn-block" />
                        </div>
                    </div>
                </div>}