@model IEnumerable<NQH_project2_2210900105.Models.PRODUCT>

@{
    ViewBag.Title = "Sports Store Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Cửa Hàng Thể Thao</h2>

<p>
    @Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <!-- Product Image -->
                <img src="@item.product_image" class="card-img-top" alt="@item.product_name">
                <div class="card-body">
                    <!-- Product Name -->
                    <h5 class="card-title">@item.product_name</h5>

                    <!-- Product Price -->
                    <p class="card-text">Price: @item.product_price.ToString("C")</p>

                    <!-- Product Size -->
                    <p class="card-text">Size: @item.product_size</p>

                    <!-- Product Color -->
                    <p class="card-text">Color: @item.product_color</p>

                    <!-- Product Quantity -->
                    <p class="card-text">Available: @item.product_quantity</p>

                    <!-- Product Description -->
                    <p class="card-text">@item.description</p>

                    <!-- Action Buttons -->
                    <a href="@Url.Action("Details", "Product", new { id = item.product_id })" class="btn btn-info">View Details</a>


                    <a href="@Url.Action("AddToCart", "Cart", new { id = item.product_id })" class="btn btn-primary">Add to Cart</a>

                </div>
            </div>
        </div>
    }
</div>
