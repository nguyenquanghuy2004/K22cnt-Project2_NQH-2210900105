<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Store - @ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Custom styles for navbar */
        .navbar {
            background-color: #0056b3;
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            margin-right: 20px;
            color: #fff !important;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700 !important;
            }

        /* Dropdown menu */
        .dropdown-menu {
            background-color: #0056b3;
            color: #fff;
        }

            .dropdown-menu .dropdown-item {
                color: #fff;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #ffd700;
                }

        /* Footer styles */
        footer {
            margin-top: 40px;
            padding: 20px;
            background-color: #343a40;
            color: #fff;
        }

            footer a {
                color: #ffd700;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        /* Custom button styles */
        .btn-outline-success {
            color: #fff;
            border-color: #ffd700;
        }

            .btn-outline-success:hover {
                background-color: #ffd700;
                border-color: #ffd700;
            }

        /* Custom styles for main content */
        .container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Badge style for cart */
        .cart-badge {
            background-color: #ffd700;
            color: #343a40;
            font-weight: bold;
            margin-left: 5px;
            padding: 2px 8px;
            border-radius: 10px;
        }

        /* Card styles for products */
        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }
    </style>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Cửa Hàng Thể Thao</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "PRODUCTs")">Sản Phẩm</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Thương Hiệu
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Nike</a></li>
                            <li><a class="dropdown-item" href="#">Adidas</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Khác</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">Giới Thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">Giỏ Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Tutorial", "Home")">Hướng Dẫn</a>
                    </li>

                    <!-- Kiểm tra trạng thái đăng nhập của người dùng -->
                    @if (Session["Account"] != null || Session["AdminAccount"] != null)
                    {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                </li>
                                <li class="nav-item">
                                    <!-- Thêm biểu tượng người dùng -->
                                    <a class="nav-link" href="@(Session["AdminAccount"] != null ? Url.Action("Index", "Admin") : Url.Action("AccountDetails", "Account"))">
                                        <i class="fas fa-user"></i>
                                    </a>
                                </li> }
                                            else
                                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                                </li>}
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Tìm Kiếm" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Tìm</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content Section -->
    <div class="container mt-4">
        @RenderBody() <!-- This is where your index view content will be rendered -->
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <p>&copy; 2024 Sports Store. All rights reserved.</p>
        <div>
            <a href="#">Facebook</a> | <a href="#">Instagram</a> | <a href="#">Twitter</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>